<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/colorText" />

            <gradient
                android:centerColor="#fdfdfd"
                android:endColor="#f4f4f4"
                android:gradientRadius="200dp"
                android:startColor="#f4f4f4"
                android:type="linear" />


            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />


        </shape>
    </item>

</layer-list>