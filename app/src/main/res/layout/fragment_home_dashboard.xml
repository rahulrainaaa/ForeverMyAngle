                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/new1_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name1"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/new1_price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="price1"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>